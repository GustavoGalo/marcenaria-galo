---
import BaseLayout from "../layouts/BaseLayout.astro";

const imgs = await Astro.glob('../../public/imgs/*.jpg')
---

<BaseLayout pageTitle="GALERIA">
  <h1 class="text-4xl font-bold my-16 text-center" >GALERIA</h1>
  <main class="grid sm:grid-cols-2 md:grid-cols-3 grid-flow-row gap-4" >
    {imgs.map(img => (
      <div>
        <img src={img.default.src} />  
      </div>
    ))}
  </main>
</BaseLayout>
